class Solution {
    public int longestOnes(int[] nums, int k) {
        int si=0;
        int ei=0;
        int c=0;
        int max=0;
        while(ei<nums.length){
            if(nums[ei]==0){
                c++;
            }
            while(c>k && si<=ei){
                if(nums[si]==0){
                    c--;
                }
                si++;
            }
            max=Math.max(max,ei-si+1);
            ei++;
        }
        return max;
        
    }
}
